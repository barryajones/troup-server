{
    "include": ["."],
    "exclude": ["node_modules", "build", "dist"],
    "compilerOptions": {
        "rootDir": ".",
        "baseUrl": ".",
        "target": "es2017",
        "module": "commonjs",
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "sourceMap": true,
        "outDir": "dist",
        "lib": ["esnext", "dom", "es6", "es2016", "es2017"],
        "skipLibCheck": true,
        "plugins": [
            { "transform": "@zerollup/ts-transform-paths" },
            { "name": "nexus/typescript-language-service" }
        ],
        "paths": {
            "*": ["*"]
        }
    }
}
